# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/investment_app
POSTGRES_DB=investment_app
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET_KEY=your_super_secret_key_change_this_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Keys
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key
YAHOO_FINANCE_API_KEY=your_yahoo_finance_api_key_if_needed

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Application Settings
APP_NAME=Investment App
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# Cache Settings
CACHE_TTL_SECONDS=900
DATA_CACHE_TTL=1800
CHART_CACHE_TTL=900
PDF_CACHE_TTL=1800

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_DAY=2000

# File Upload
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=uploads

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@investmentapp.com

# Security
PASSWORD_MIN_LENGTH=8
MAX_FAILED_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=15

# External Services
EXTERNAL_API_TIMEOUT=30
MAX_RETRY_ATTEMPTS=3

# Chart Configuration
MAX_CHART_WIDTH=1200
MAX_CHART_HEIGHT=800
ENABLE_CHART_ANIMATIONS=false

# Report Configuration
SHARED_REPORT_BASE_URL=http://localhost:3000
REPORT_EXPIRY_DAYS=30

# Development
RELOAD_ON_CHANGE=true
ENABLE_PROFILING=false